---
import { SEO } from 'astro-seo';

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
}
const {
    title,
    description = 'I post My Hackthebox writeups and other InfoSec findings here.',
    ogImage = '',
} = Astro.props as Props;

---

<SEO
    title={title ? `${title} | PanaPrende` : 'PanaPrende'}
    description={description}
    openGraph={{
        basic: {
            title: 'pana-aprende',
            type: 'website',
            image: ogImage,
        },
    }}
   
    extend={{
        link: [
            {
                rel: 'sitemap',
                href: '/sitemap-index.xml',
            },
        ],
        meta: [
            {
                name: 'google-site-verification',
                content: '2PrS27IRbrLgYfKmOC1bjuPohSqqsGbEUVY6dKD0bic',
            },
            {
                name: 'yandex-verification',
                content: 'd1860867354dc963',
            },
        ],
    }}
/>
